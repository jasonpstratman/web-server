<!doctype html>
<html>
	<head>
		<title>Calculator</title>
		<link rel="stylesheet" href="/stylesheets/style.css">

		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

		<!-- Optional theme -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

		<meta name="viewport" content="width=device-width, initial-scale=1">

	</head>
	<body>

		<header class="navbar-inverse" role="banner">
			<div class="container">
			  <nav class="navigation">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			      <a class="navbar-brand" href="/">Jason Industries</a>
			    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			        <li class="active">
			        	<a href="/calculator">Calculator
			        		<span class="sr-only">(current)</span>
			        	</a>
			        </li>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			  </nav><!-- /.container-fluid -->
			</div>
		</header>

		<div class="container calculator">
			<div class="row">
			  <div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
			  	<p id="overview"></p>
			  	<p>
			  		<input type="text" id="number">
			  	</p>
			  </div>
			</div>
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
					<div class="btn-group btn-group-justified button-row" role="group" aria-label="..." >
						<div class="btn-group" role="group">
							<button id="cleareverything" type="button" class="sharp btn btn-default">CE</button>
						</div>
						<div class="btn-group" role="group">
							<button id="clear" type="button" class="sharp btn btn-default">C</button>
						</div>
						<div class="btn-group" role="group">
							<button id="backspace" type="button" class="sharp btn btn-default">&larr;</button>
						</div>
						<div class="btn-group" role="group">
							<button id="divide" type="button" class="sharp btn btn-default">/</button>
						</div>
					</div>
					<div class="btn-group btn-group-justified button-row" role="group" aria-label="..." >
						<div class="btn-group" role="group">
							<button id="seven" type="button" class="sharp btn btn-default">7</button>
						</div>
						<div class="btn-group" role="group">
							<button id="eight" type="button" class="sharp btn btn-default">8</button>
						</div>
						<div class="btn-group" role="group">
							<button id="nine" type="button" class="sharp btn btn-default">9</button>
						</div>
						<div class="btn-group" role="group">
							<button id="multiply" type="button" class="sharp btn btn-default">X</button>
						</div>
					</div>
					<div class="btn-group btn-group-justified button-row" role="group" aria-label="..." >
						<div class="btn-group" role="group">
							<button id="four" type="button" class="sharp btn btn-default">4</button>
						</div>
						<div class="btn-group" role="group">
							<button id="five" type="button" class="sharp btn btn-default">5</button>
						</div>
						<div class="btn-group" role="group">
							<button id="six" type="button" class="sharp btn btn-default">6</button>
						</div>
						<div class="btn-group" role="group">
							<button id="minus" type="button" class="sharp btn btn-default">-</button>
						</div>
					</div>
					<div class="btn-group btn-group-justified button-row" role="group" aria-label="..." >
						<div class="btn-group" role="group">
							<button id="one" type="button" class="sharp btn btn-default">1</button>
						</div>
						<div class="btn-group" role="group">
							<button id="two" type="button" class="sharp btn btn-default">2</button>
						</div>
						<div class="btn-group" role="group">
							<button id="three" type="button" class="sharp btn btn-default">3</button>
						</div>
						<div class="btn-group" role="group">
							<button id="plus" type="button" class="sharp btn btn-default">+</button>
						</div>
					</div>
					<div class="btn-group btn-group-justified button-row" role="group" aria-label="..." >
						<div class="btn-group" role="group">
							<button id="sign" type="button" class="sharp btn btn-default">+-</button>
						</div>
						<div class="btn-group" role="group">
							<button id="zero" type="button" class="sharp btn btn-default">0</button>
						</div>
						<div class="btn-group" role="group">
							<button id="decimal" type="button" class="sharp btn btn-default">.</button>
						</div>
						<div class="btn-group" role="group">
							<button id="equals" type="button" class="sharp btn btn-default">=</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<!-- Latest compiled and minified JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

		<script src="/javascripts/calculator.js"></script>
	</body>
</html>